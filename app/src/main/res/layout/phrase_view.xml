<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="data" type="io.digibyte.presenter.fragments.models.PhraseViewModel"/>
        <variable name="callback" type="io.digibyte.presenter.fragments.interfaces.PhraseCallback"/>
    </data>

    <TextView android:foreground="?android:attr/selectableItemBackground"
              android:textSize="20sp"
              android:padding="12dp"
              android:gravity="center"
              android:textColor="#ffffff"
              android:onClick="@{() -> callback.onClick(data.phrase)}"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{data.phrase}"/>

</layout>