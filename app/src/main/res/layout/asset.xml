<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="data" type="io.digibyte.presenter.activities.models.AssetModel"/>
        <variable name="callback" type="io.digibyte.presenter.activities.callbacks.AssetCallback"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="24dp"
                  android:layout_marginTop="12dp"
                  android:layout_marginEnd="24dp"
                  android:layout_marginBottom="12dp"
                  android:background="@drawable/asset_background"
                  android:gravity="center_vertical"
                  android:onClick="@{() -> callback.onAssetClick(data)}"
                  android:orientation="horizontal"
                  android:padding="12dp">

        <ImageView android:id="@+id/asset_drawable" android:layout_width="35dp"
                   android:layout_height="35dp" android:layout_marginEnd="12dp"
                   app:remoteImage="@{data.assetImage}"/>
        <TextView android:id="@+id/asset_name" android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:text="@{data.assetName}"
                  android:textColor="@color/white" android:textSize="16sp"/>
        <View contentPaddingBottom="8dp" android:layout_width="1dp"
              android:layout_height="match_parent" android:layout_marginStart="16dp"
              android:layout_marginEnd="16dp" android:background="#0f0f2b"
              android:paddingTop="8dp"/>
        <TextView android:id="@+id/asset_amount" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@{data.assetQuantity}" android:textColor="@color/white"/>
        <ImageView android:id="@+id/asset_menu" android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="16dp"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:padding="12dp"
                   android:src="@drawable/asset_menu"
                   android:textSize="17sp"/>

    </LinearLayout>
</layout>

